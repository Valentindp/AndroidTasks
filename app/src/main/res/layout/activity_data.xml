<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/web" android:layout_alignParentStart="true"
            android:id="@+id/SiteView"
            android:layout_below="@+id/СountryView" android:layout_marginStart="5dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/mountain" android:layout_alignParentStart="true"
            android:id="@+id/СountryView"
            android:layout_below="@+id/DescriptionView" android:layout_marginStart="5dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/info" android:layout_alignParentStart="true"
            android:id="@+id/DescriptionView"
            android:layout_below="@+id/NameView" android:layout_marginStart="5dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="30dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/DataSiteTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" android:layout_marginLeft="10dp" android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/DataСountryTextView" android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/SiteView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/DataСountryTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" android:layout_marginLeft="10dp" android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/DataDescriptionTextView" android:layout_toEndOf="@+id/СountryView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp" android:id="@+id/DataDescriptionTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" android:layout_marginLeft="10dp" android:layout_marginStart="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/DataNameTextView" android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/DescriptionView"/>
    <TextView
            android:layout_width="280dp"
            android:layout_height="30dp" android:id="@+id/DataNameTextView"
            android:layout_below="@+id/DataPhotoView"
            android:layout_marginLeft="10dp" android:layout_marginStart="5dp"
            android:layout_marginRight="10dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/SelectedButton" android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/NameView"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/DataPhotoView" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp"/>
    <Button
            android:text="@string/button_selected_name2"
            android:layout_width="80dp"
            android:background="@android:color/transparent"
            android:layout_height="30dp" android:layout_below="@+id/DataPhotoView"
            android:layout_alignParentEnd="true" android:id="@+id/SelectedButton" android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" android:textAllCaps="false"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/title" android:layout_alignParentStart="true"
            android:id="@+id/NameView" android:layout_marginTop="10dp"
            android:layout_below="@+id/DataPhotoView" android:layout_marginStart="5dp" android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"/>

</RelativeLayout>